@model App.Client.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            <div class="row clearfix">
                <div class="col-md-4 col-md-offset-4">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel panel-primary">
                            <div class="panel-heading panel-heading-lg">
                                Register with @ViewBag.AppName
                            </div>
                            <div class="panel-body">
                                @Html.Partial("_Alert")
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-user"></i></span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Username...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-key"></i></span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-key"></i></span>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "Password again...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="btn-group btn-group-justified">
                            <div class="btn-group">
                                <button id="register-button" type="submit" class="btn btn-lg btn-success"> Register</button>
                            </div>
                        </div>
                        <br />
                        <div class="btn-group btn-group-justified">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-default"> Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
