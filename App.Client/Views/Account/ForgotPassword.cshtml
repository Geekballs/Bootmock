@model App.Client.Infastructure.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            <div class="row clearfix">
                <div class="col-md-4 col-md-offset-4">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel panel-primary">
                            <div class="panel-heading panel-heading-lg">
                                Forgot Password
                            </div>
                            <div class="panel-body">
                                @Html.Partial("_Alert")
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-envelope"></i></span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="btn-group btn-group-justified">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-lg btn-success"> Continue</button>
                            </div>
                        </div>
                        <br />
                        <div class="btn-group btn-group-justified">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-default"> Cancel</a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-lg btn-default"> Register</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>