@{
    ViewBag.Title = "Reset Password Confirmation";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            <div class="row clearfix">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-primary">
                        <div class="panel-heading panel-heading-lg">
                            Reset Password Complete
                        </div>
                        <div class="panel-body">
                            Your password has been reset. Please login using your new credentials.
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-success"> Login</a>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>h