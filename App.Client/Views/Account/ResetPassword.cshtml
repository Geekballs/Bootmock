@model App.Client.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            <div class="row clearfix">
                <div class="col-md-4 col-md-offset-4">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Code)
                        <div class="panel panel-primary">
                            <div class="panel-heading panel-heading-lg">
                                Reset Password
                            </div>
                            <div class="panel-body">
                                @Html.Partial("_Alert")
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-envelope"></i></span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-key"></i></span>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "New password...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-2x fa-key"></i></span>
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", @placeholder = "New password again...", @autocomplete = "off" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="btn-group btn-group-justified">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-lg btn-success"> Continue</button>
                            </div>
                        </div>
                        <br />
                    }
                </div>
            </div>
        </div>
    </div>
</div>
