@model IEnumerable<App.Client.DomainModels.ApplicationUser>
@{
    ViewBag.Title = "Users";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            @Html.Partial("_Alert")
            <div class="well">
                <h4><b>Users</b></h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("Create", "User")" class="btn btn-primary pull-right"><span class="fa fa-fw fa-plus"></span> Create a New User</a>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default" style="margin-bottom: 5px;">
                        <div class="panel-heading clearfix">
                            <b>Records: @Model.Count()</b>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
                                <thead>
                                    <tr>
                                        <th class="col-md-3">ID</th>
                                        <th class="col-md-9">Name</th>
                                        <th class="">Confirmed</th>
                                        <th class=""></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="vert-align text-uppercase">
                                            @Html.DisplayFor(modelItem => user.Id)
                                        </td>
                                        <td class="vert-align">
                                            @Html.DisplayFor(modelItem => user.UserName)
                                        </td>
                                        <td class="vert-align text-center">
                                            @if (user.EmailConfirmed)
                                            {
                                            <i class="fa fa-fw  fa-check text-success"></i>
                                            }
                                            else
                                            {
                                            <i class="fa fa-fw  fa-times text-danger"></i>
                                            }
                                        </td>
                                        <td class="vert-align">
                                            <a href="@Url.Action("Edit", "User", new {id = user.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Edit"><span class="fa fa-fw fa-pencil"></span><span class="hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                            <a href="@Url.Action("ResetPassword", "User", new {id = user.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Reset Password"><span class="fa fa-fw fa-key"></span><span class="hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                            <a href="@Url.Action("Delete", "User", new {id = user.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Delete"><span class="fa fa-fw fa-trash"></span><span class="hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>