@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            @Html.Partial("_Alert")
            <div class="well">
                <h4><b>Roles</b></h4>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="@Url.Action("Create", "Role")" class="btn btn-primary pull-right"><span class="fa fa-fw fa-plus"></span> Create a New Role</a>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default" style="margin-bottom: 5px;">
                        <div class="panel-heading clearfix">
                            <b>Records: @Model.Count()</b>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
                                <thead>
                                    <tr>
                                        <th class="col-md-3">ID</th>
                                        <th class="col-md-9">Name</th>
                                        <th class=""></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in Model)
                                    {
                                        <tr>
                                            <td class="vert-align text-uppercase">
                                                @Html.DisplayFor(modelItem => role.Id)
                                            </td>
                                            <td class="vert-align">
                                                @Html.DisplayFor(modelItem => role.Name)
                                            </td>
                                            <td class="vert-align">
                                                <a href="@Url.Action("Edit", "Role", new {id = role.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Edit"><span class="fa fa-fw fa-pencil"></span><span class="hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                                <a href="@Url.Action("Users", "Role", new {id = role.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Users"><span class="fa fa-fw fa-users"></span><span class="hidden-sm hidden-md hidden-lg"> Edit</span></a>
                                                <a href="@Url.Action("Delete", "User", new {id = role.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Edit"><span class="fa fa-fw fa-trash"></span><span class="hidden-sm hidden-md hidden-lg"> Delete</span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


