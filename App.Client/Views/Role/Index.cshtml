@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Roles";
}
<div class="container-fluid">
    <div class="body-content">
        <div id="page">
            @Html.Partial("_Alert")
            <div class="well">
                <h4>
                    <span>Roles <b>(@Model.Count())</b></span>
                </h4>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" style="margin-bottom: 0px;">
                            <thead>
                                <tr>
                                    <th class="col-md-3">ID</th>
                                    <th class="col-md-9">Name</th>
                                    <th class=""></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td class="vert-align">
                                            @Html.DisplayFor(modelItem => role.Id)
                                        </td>
                                        <td class="vert-align">
                                            @Html.DisplayFor(modelItem => role.Name)
                                        </td>
                                        <td class="vert-align">
                                            <a href="@Url.Action("Edit", "Role", new {id = role.Id})" class="btn btn-default"><span class="fa fa-fw fa-pencil"></span></a>
                                            <a href="@Url.Action("Users", "Role", new {id = role.Id})" class="btn btn-default"><span class="fa fa-fw fa-users"></span></a>
                                            <a href="@Url.Action("Delete", "Role", new {id = role.Id})" class="btn btn-default"><span class="fa fa-fw fa-trash"></span></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


